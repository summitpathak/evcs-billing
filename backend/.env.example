# Production Environment Variables for PythonAnywhere
# Copy this file to .env and fill in the values

# Database
# For PythonAnywhere free tier, leave empty to use SQLite
# For MySQL (paid tier): mysql://username:password@username.mysql.pythonanywhere-services.com/username$dbname
DATABASE_URL=

# JWT Secret (REQUIRED - Generate a strong random key)
# Generate with: python3 -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=CHANGE-THIS-TO-A-RANDOM-SECRET-KEY

# Flask
FLASK_ENV=production
FLASK_DEBUG=False

# CORS - Your frontend URL (Update with your Vercel deployment URL)
FRONTEND_URL=https://your-app-name.vercel.app

# Port (Not used on PythonAnywhere, but keep for local testing)
PORT=5001
